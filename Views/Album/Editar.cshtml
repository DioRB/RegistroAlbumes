@{
}
@model RegistroAlbumes.Models.Album;
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Editar álbum</h2>
        <form asp-controller="Album" asp-action="Editar" method="post">
            <input asp-for="IdAlbum" type="hidden"/>
            <div class="mb-3">
                <label>Nombre</label>
                <input class="form-control" asp-for="Nombre" type="text" />
            </div>
            <div class="mb-3">
                <label>Autor</label>
                <input class="form-control" asp-for="Autor" type="text" />
            </div>
            <div class="mb-3">
                <label>Fecha de lanzamiento</label>
                <input class="form-control" asp-for="FechaLanzamiento" type="date" />
            </div>
            <div class="mb-3">
                <label>Puntuación</label>
                <input class="form-control" asp-for="Puntuacion" type="number" step="0.1" min="0" max="10" />
            </div>
            <div class="mb-3">
                <label>Enlace</label>
                <input class="form-control" asp-for="Enlace" type="text" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Album" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>
        </form>

    </div>
</div>
