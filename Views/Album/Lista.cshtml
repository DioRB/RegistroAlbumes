@{
}
@model List<RegistroAlbumes.Models.Album>;
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Lista albumes</h2>
        <a asp-controller="Album" asp-action="Nuevo" class="btn btn-success mb3">Nuevo</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Autor</th>
                    <th>Fecha de lanzamiento</th>
                    <th>Puntuación</th>
                    <th>Enlace</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdAlbum</td>
                        <td>@item.Nombre</td>
                        <td>@item.Autor</td>
                        <td>@item.FechaLanzamiento.ToString("dd/MM/yyyy")</td>
                        <td>@item.Puntuacion</td>
                        <td><a href="@item.Enlace">Spotify</a></td>
                        <td>
                            <a asp-controller="Album" asp-action="Editar" asp-route-id="@item.IdAlbum" class="btn btn-primary">Editar</a>
                            <a asp-controller="Album" asp-action="Eliminar" asp-route-id="@item.IdAlbum" onclick="return confirmar()" class="btn btn-danger">Eliminar</a>


                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

@section Scripts{
        <script>
            function confirmar(){
                return confirm("¿Está seguro de eliminar el album? ")
            }
        </script>
}